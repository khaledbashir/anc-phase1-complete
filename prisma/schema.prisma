// Structured product catalog — replaces hardcoded LED_MODULES in data/catalogs/led-products.ts
// Each row = one LED cabinet/module from a manufacturer's product line
model ManufacturerProduct {
  id                      String   @id @default(cuid())
  manufacturer            String   // "LG", "Yaham", "Absen", "Unilumin"
  productFamily           String   // "GSQA", "LAA", "S3", "A Series"
  modelNumber             String   @unique
  displayName             String   // Human-readable: "LG GSQA 3.9mm Indoor"

  // Physical specs
  pixelPitch              Float    // mm (e.g., 3.9, 6.0, 10.0)
  cabinetWidthMm          Float    // Cabinet width in millimeters
  cabinetHeightMm         Float    // Cabinet height in millimeters
  cabinetDepthMm          Float?   // Cabinet depth in millimeters (not always known)
  weightKgPerCabinet      Float    // Weight per cabinet in kilograms

  // Optical specs
  maxNits                 Float    // Maximum brightness (e.g., 7500)
  typicalNits             Float?   // Typical operating brightness
  refreshRate             Int?     // Hz (e.g., 3840)

  // Electrical specs
  maxPowerWattsPerCab     Float    // Maximum power per cabinet
  typicalPowerWattsPerCab Float?   // Typical power per cabinet

  // Environmental
  environment             String   // "indoor", "outdoor", "indoor_outdoor"
  ipRating                String?  // "IP65", "IP54", etc.
  operatingTempMin        Float?   // Celsius
  operatingTempMax        Float?   // Celsius

  // Service/Install
  serviceType             String   @default("front") // "front", "rear", "front_rear"
  supportsHalfModule      Boolean  @default(false)
  isCurved                Boolean  @default(false)

  // Pricing (ANC internal)
  costPerSqFt             Decimal? // ANC buy cost per sq ft
  msrpPerSqFt             Decimal? // Manufacturer suggested retail

  // Flexible overflow — for Matt's additional parameters we don't know yet
  // e.g. { viewingAngle: 160, contrastRatio: "5000:1", certifications: ["UL", "FCC"] }
  extendedSpecs           Json?

  // Metadata
  sourceSpreadsheet       String?  // Which Excel file this was imported from
  isActive                Boolean  @default(true) // Soft-delete for discontinued products
  importedAt              DateTime @default(now())
  updatedAt               DateTime @updatedAt

  // Relations
  screenConfigs           ScreenConfig[]

  @@index([pixelPitch, environment])
  @@index([manufacturer])
  @@index([isActive])
}

// ============================================================================
// I1: Normalized Product Catalog — Manufacturer → Series → Module + Processor
// ============================================================================

model Manufacturer {
  id          String          @id @default(cuid())
  name        String          @unique // "Yaham", "LG", "Absen"
  website     String?
  contactName String?
  contactEmail String?
  contactPhone String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  series      ProductSeries[]
}

model ProductSeries {
  id             String          @id @default(cuid())
  name           String          // "HVO", "LSBC", "S3"
  description    String?
  environment    String          // "indoor", "outdoor", "indoor_outdoor"
  manufacturerId String
  manufacturer   Manufacturer    @relation(fields: [manufacturerId], references: [id], onDelete: Cascade)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  modules        ProductModule[]

  @@unique([manufacturerId, name])
  @@index([manufacturerId])
}

model ProductModule {
  id            String        @id @default(cuid())
  modelNumber   String        @unique
  seriesId      String
  series        ProductSeries @relation(fields: [seriesId], references: [id], onDelete: Cascade)

  // Physical
  pixelPitch    Float         // mm
  moduleWidth   Float         // mm
  moduleHeight  Float         // mm
  weight        Float         // kg per module/cabinet

  // Optical
  brightness    Int           // nits (max)

  // Electrical
  powerMax      Int           // watts per module
  powerAvg      Int?          // watts per module (typical)

  // Performance
  refreshRate   Int?          // Hz

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([seriesId])
  @@index([pixelPitch])
}

model Processor {
  id          String   @id @default(cuid())
  name        String   // "Novastar VX1000", "Brompton Tessera SX40"
  maxPixels   Int      // max pixel count (e.g., 6500000)
  inputs      String   // "4x HDMI 2.0, 2x DP 1.2"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
